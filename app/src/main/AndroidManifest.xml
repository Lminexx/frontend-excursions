<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <application
        android:name=".OpenWorldApp"
        android:label="@string/app_name"
        android:icon="@drawable/ic_app_v3"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:roundIcon="@drawable/ic_app_v3"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjectExcursions"
        android:usesCleartextTraffic="true"
        android:hardwareAccelerated="true"
        android:enableOnBackInvokedCallback="true"
        tools:targetApi="tiramisu">
        <activity
            android:name="com.example.projectexcursions.ui.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.projectexcursions.ui.registration.RegActivity"
            android:exported="true">
        </activity>
        <activity
            android:name="com.example.projectexcursions.ui.auth.AuthActivity"
            android:exported="true">
        </activity>
        <activity
            android:name="com.example.projectexcursions.ui.excursion.ExcursionActivity"
            android:exported="true">
        </activity>
        <activity
            android:name="com.example.projectexcursions.ui.create_excursion.CreateExcursionActivity"
            android:exported="true">
        </activity>
        <activity
            android:name="com.example.projectexcursions.ui.created_excursions_list.CreatedExListActivity"
            android:exported="true">
        </activity>
        <activity
            android:name="com.example.projectexcursions.ui.mine_excursion.MineExcursionActivity"
            android:exported="true">
        </activity>
    </application>
</manifest>