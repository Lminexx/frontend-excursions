<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp">

        <TextView
            android:id="@+id/userNickname"
            android:layout_height="36dp"
            android:layout_width="180dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="16dp"
            android:text="@string/user"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:scrollHorizontally="false"
            app:layout_constraintStart_toEndOf="@id/userPhoto"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/buttCreateExcursion" />

        <ImageButton
            android:id="@+id/buttCreateExcursion"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="48dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/create_excursion"
            android:src="@drawable/ic_create_ex"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/buttLogOut"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="48dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/log_out"
            android:src="@drawable/ic_logout"
            app:layout_constraintTop_toBottomOf="@+id/buttCreateExcursion"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/userPhoto"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/profilelogo"
            android:src="@drawable/ic_profile"
            tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/createdExcursionsList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="34dp"
            android:background="@drawable/button_pattern_1"
            android:text="@string/my_exc_list"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/userPhoto"
            app:layout_constraintTop_toBottomOf="@id/userNickname"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
